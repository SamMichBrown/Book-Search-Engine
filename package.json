  },
  "homepage": "https://github.com/SamMichBrown/Book-Search-Engine#readme",
  "dependencies": {
    "if-env": "^1.0.4",
    "jwt-decode": "^3.1.2",
    "mongoose": "^5.12.7",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "concurrently": "^6.1.0"
  }
}
